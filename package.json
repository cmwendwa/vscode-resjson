{
  "name": "resjson",
  "displayName": "resjson",
  "description": "Provide language support for .resjson files.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.43.0"
  },
  "publisher": "cmwendwa",
  "repository": {
    "type": "git",
    "url": "https://github.com/cmwendwa/vscode-resjson.git"
  },
  "bugs": {
    "url": "https://github.com/cmwendwa/vscode-resjson/issues"
  },
  "homepage":  "https://github.com/cmwendwa/vscode-resjson/blob/master/README.md",
  "icon": "assets/images/resjson.png",
  "galleryBanner": {
    "theme": "dark"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "resjson",
        "aliases": [
          "RESJSON",
          "resjson"
        ],
        "extensions": [
          ".resjson"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "resjson",
        "scopeName": "source.resjson",
        "path": "./syntaxes/resjson.tmLanguage"
      }
    ],
    "commands": [
      {
        "command": "extension.flattenByUnderscore",
        "title": "Resjson: Flatten by underscore(_)"
      },
      {
        "command": "extension.expandByUnderscore",
        "title": "Rejson: Unflatten by underscore(_)"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.1",
    "@types/mocha": "^7.0.1",
    "@types/node": "^12.11.7",
    "@types/vscode": "^1.42.0",
    "eslint": "^6.8.0",
    "@typescript-eslint/parser": "^2.18.0",
    "@typescript-eslint/eslint-plugin": "^2.18.0",
    "glob": "^7.1.6",
    "mocha": "^7.0.1",
    "typescript": "^3.7.5",
    "vscode-test": "^1.3.0"
  }
}
